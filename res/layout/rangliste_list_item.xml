<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:padding="5dip" >
    
                <ImageView
                android:id="@+id/imageViewUser"
  				android:layout_width="48dp" 
        		android:layout_height="48dp"
     			android:layout_alignParentLeft="true"
       			android:layout_centerVertical="true"
                android:background="#000000"
                android:padding="1dp"
                android:src="@drawable/ic_icon_dance"
                android:contentDescription="@string/profil" />

            <TextView
                android:id="@+id/textSpitzname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
      			 android:layout_toRightOf="@id/imageViewUser"
                android:text="@string/spitzname"
                android:paddingLeft="5dp"
        		android:paddingTop="5dp"
                android:textStyle="bold"
                android:textSize="16sp"  />

            <TextView
                android:id="@+id/textPunkte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textSpitzname"
                android:layout_below="@+id/textSpitzname"
                android:paddingLeft="5dp"
                android:text="@string/xy"
                android:textSize="14sp" />

            
            </RelativeLayout>